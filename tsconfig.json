{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./build",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@utils/*": ["./utils/*"],
      "@lib/*": ["./lib/*"],
      "@hosting/*": ["./lib/hosting/*"],
      "@restAPI/*": ["./lib/restAPI/*"],
      "@webhooks/*": ["./lib/webhooks/*"]
    }
  },
  "exclude": ["build", "node_modules", "cdk.out"]
}
